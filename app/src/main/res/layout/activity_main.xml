<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:textColor="#787878"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/dds"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textColor="#787878"
        android:textSize="68sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dds"
        app:layout_constraintVertical_bias="0.1" />

    <Button
        android:id="@+id/hours1_up"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/hours1"
        app:layout_constraintEnd_toEndOf="@+id/hours1"
        app:layout_constraintStart_toStartOf="@+id/hours1" />

    <TextView
        android:id="@+id/hours1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="@+id/dd1"
        app:layout_constraintEnd_toStartOf="@+id/dds1"
        app:layout_constraintTop_toTopOf="@+id/dd1"/>

    <Button
        android:id="@+id/hours1_down"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/hours1"
        app:layout_constraintEnd_toEndOf="@+id/hours1"
        app:layout_constraintStart_toStartOf="@+id/hours1" />

    <TextView
        android:id="@+id/dds1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="@id/dds"
        app:layout_constraintEnd_toStartOf="@id/hours2"
        app:layout_constraintTop_toTopOf="@id/dds"
        app:layout_constraintVertical_bias="0.25" />

    <Button
        android:id="@+id/hours2_up"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/hours2"
        app:layout_constraintEnd_toEndOf="@+id/hours2"
        app:layout_constraintStart_toStartOf="@+id/hours2" />

    <TextView
        android:id="@+id/hours2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="@+id/dd1"
        app:layout_constraintEnd_toStartOf="@id/dd1"
        app:layout_constraintTop_toTopOf="@+id/dd1"/>

    <Button
        android:id="@+id/hours2_down"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/hours2"
        app:layout_constraintEnd_toEndOf="@+id/hours2"
        app:layout_constraintStart_toStartOf="@+id/hours2" />

    <TextView
        android:id="@+id/dd1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="@id/dds"
        app:layout_constraintEnd_toStartOf="@id/dd2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/dds" />

    <Button
        android:id="@+id/min1_up"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/min1"
        app:layout_constraintEnd_toEndOf="@+id/min1"
        app:layout_constraintStart_toStartOf="@+id/min1" />

    <TextView
        android:id="@+id/min1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/dds"
        app:layout_constraintEnd_toStartOf="@+id/dds"
        app:layout_constraintTop_toTopOf="@+id/dds" />

    <Button
        android:id="@+id/min1_down"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/min1"
        app:layout_constraintEnd_toEndOf="@+id/min1"
        app:layout_constraintStart_toStartOf="@+id/min1" />

    <TextView
        android:id="@+id/dds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.35" />

    <Button
        android:id="@+id/min2_up"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/min2"
        app:layout_constraintEnd_toEndOf="@+id/min2"
        app:layout_constraintStart_toStartOf="@+id/min2" />

    <TextView
        android:id="@+id/min2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/dd2"
        app:layout_constraintStart_toEndOf="@id/dds"
        app:layout_constraintTop_toTopOf="@+id/dd2" />

    <Button
        android:id="@+id/min2_down"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/min2"
        app:layout_constraintEnd_toEndOf="@+id/min2"
        app:layout_constraintStart_toStartOf="@+id/min2" />

    <TextView
        android:id="@+id/dd2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="@id/dds"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/dd1"
        app:layout_constraintTop_toTopOf="@id/dds" />

    <Button
        android:id="@+id/sec1_up"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/sec1"
        app:layout_constraintEnd_toEndOf="@+id/sec1"
        app:layout_constraintStart_toStartOf="@+id/sec1" />

    <TextView
        android:id="@+id/sec1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="@+id/dd2"
        app:layout_constraintStart_toEndOf="@id/dd2" />

    <Button
        android:id="@+id/sec1_down"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/dds2"
        app:layout_constraintEnd_toEndOf="@+id/sec1"
        app:layout_constraintStart_toStartOf="@+id/sec1" />

    <TextView
        android:id="@+id/dds2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="@id/dds"
        app:layout_constraintStart_toEndOf="@id/sec1"
        app:layout_constraintTop_toTopOf="@id/dds"
        app:layout_constraintVertical_bias="0.25" />

    <Button
        android:id="@+id/sec2_up"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/sec2"
        app:layout_constraintEnd_toEndOf="@+id/sec2"
        app:layout_constraintStart_toStartOf="@+id/sec2" />

    <TextView
        android:id="@+id/sec2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="@+id/dd2"
        app:layout_constraintStart_toEndOf="@id/dds2" />

    <Button
        android:id="@+id/sec2_down"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/dds2"
        app:layout_constraintEnd_toEndOf="@+id/sec2"
        app:layout_constraintStart_toStartOf="@+id/sec2" />

    <Button
        android:id="@+id/button_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="START"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_stop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95" />

    <Button
        android:id="@+id/button_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STOP"
        android:textSize="24sp"
        android:enabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_start"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95" />

</androidx.constraintlayout.widget.ConstraintLayout>